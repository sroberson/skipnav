{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "root": true,
  "globals": {
    "log": true,
    "require": true,
    "ScrollMagic": true,
    "err": true,
    "_": true,
    "google": true,
    "ga": true
  },
  "rules": {
    // enable additional rules
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "arrow-parens": "error",
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "eqeqeq": [
      2,
      "allow-null"
    ],
    // override default options for rules from base configurations
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
      }
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-useless-escape": 0,
    "no-multiple-empty-lines": "error",
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "var",
        "next": "return"
      }
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "quotes": ["error", "double"]
  }
}
